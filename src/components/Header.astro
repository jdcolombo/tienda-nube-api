---
export interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Tienda Nube Products",
  subtitle = "Descubre nuestra colecci√≥n de productos",
} = Astro.props;
---

<header class="hero-header">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      <div class="hero-decoration">
        <div class="decoration-line"></div>
      </div>
    </div>
  </div>
</header>

<style>
  .hero-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    text-align: center;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }

  .hero-header::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")
      repeat;
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0 0 16px 0;
    line-height: 1.1;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin: 0 0 32px 0;
    opacity: 0.9;
    line-height: 1.5;
    font-weight: 300;
  }

  .hero-decoration {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 24px;
  }

  .decoration-line {
    width: 80px;
    height: 3px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .hero-header {
      padding: 60px 0;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-header {
      padding: 40px 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }
  }
</style>
